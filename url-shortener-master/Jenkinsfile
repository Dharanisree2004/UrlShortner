pipeline {
    agent any

    environment {
        MYSQL_URL = "jdbc:mysql://mysql:3306/urlshortenerdb"
        MYSQL_USERNAME = "root"
        // Using Jenkins credentials for password securely
        MYSQL_PASSWORD = credentials('mysql-credentials')  // Store your password as 'mysql-credentials' in Jenkins credentials store
        SPRING_DATASOURCE_URL = "jdbc:mysql://mysql:3306/urlshortenerdb"
        SPRING_DATASOURCE_USERNAME = "root"
        SPRING_DATASOURCE_PASSWORD = credentials('mysql-credentials')  // Use credentials store for the password
        DOCKER_IMAGE = 'url-shortener'
        CONTAINER_NAME = 'url-shortener-container'
    }

    stages {
        stage('Build with Maven') {
            steps {
                dir('url-shortener-master') {
                    // Run Maven with additional flags for debugging
                    sh 'mvn clean package -e -X'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('url-shortener-master') {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }

        stage('Stop Old Container') {
            steps {
                script {
                    // Stop and remove old container if it exists
                    sh """
                    docker stop $CONTAINER_NAME || true
                    docker rm $CONTAINER_NAME || true
                    """
                }
            }
        }

        stage('Run New Container') {
            steps {
                // Run the new container with the specified port and container name
                sh 'docker run -d -p 8067:8067 --name $CONTAINER_NAME $DOCKER_IMAGE'
            }
        }
    }
}
