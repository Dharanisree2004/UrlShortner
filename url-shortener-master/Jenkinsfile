pipeline {
    agent any

    tools {
        maven 'Maven 3.8.6'
        jdk 'JDK 21'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Dharanisree2004/UrlShortner.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('url-shortener-master') {  // Navigate to the directory containing pom.xml
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('url-shortener-master') {  // Navigate to the directory containing pom.xml
                    sh 'mvn test'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('url-shortener-master') {  // Ensure Docker build is run from the correct directory
                    sh 'docker build -t url-shortener:latest .'
                }
            }
        }

        stage('Run with Docker Compose') {
            steps {
                dir('url-shortener-master') {  // Ensure Docker Compose runs from the correct directory
                    sh 'docker-compose down || true'
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Add actual deployment logic here if needed
            }
        }
    }

    post {
        failure {
            echo '❌ Build failed.'
        }
        success {
            echo '✅ Build and deploy successful.'
        }
    }
}
