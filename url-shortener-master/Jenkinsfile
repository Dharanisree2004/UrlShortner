pipeline {
    agent any

    // tools {
    //     maven 'Maven 3.8.6'
    //     jdk 'JDK 21'
    // }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Dharanisree2004/UrlShortner.git'
            }
        }

        stage('Build with Maven') {
            steps {
                dir('url-shortener-master') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir('url-shortener-master') {
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // your deployment steps here
            }
        }
    }

    post {
        failure {
            echo 'Build failed.'
        }
    }
}
